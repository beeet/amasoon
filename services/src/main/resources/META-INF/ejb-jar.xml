<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns = "http://java.sun.com/xml/ns/javaee"
         version = "3.1"
         xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation = "http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd">

    <enterprise-beans>
        <message-driven>
            <ejb-name>OrderProcessorBean</ejb-name>
            <env-entry>
                <env-entry-name>orderProcessingTime</env-entry-name>
                <env-entry-type>java.lang.Long</env-entry-type>
                <env-entry-value>60000</env-entry-value>
            </env-entry>
        </message-driven>
        <session>
            <ejb-name>CatalogServiceBean</ejb-name>
            <env-entry>
                <env-entry-name>maxResults</env-entry-name>
                <env-entry-type>java.lang.Integer</env-entry-type>
                <env-entry-value>25</env-entry-value>
        </session>
    </enterprise-beans>

    <interceptors>
        <interceptor>
            <interceptor-class>org.books.interceptors.LoggingInterceptor</interceptor-class>
        </interceptor>
        <interceptor>
            <interceptor-class>org.books.interceptors.ConstraintViolationInterceptor</interceptor-class>
        </interceptor>
    </interceptors>
    <assembly-descriptor>
        <interceptor-binding>
            <description>default logger for all beans</description>
            <ejb-name>*</ejb-name>
            <interceptor-class>org.books.interceptors.LoggingInterceptor</interceptor-class>
        </interceptor-binding>
        <interceptor-binding>
            <description>default logger for all beans</description>
            <ejb-name>*</ejb-name>
            <interceptor-class>org.books.interceptors.ConstraintViolationInterceptor</interceptor-class>
        </interceptor-binding>
    </assembly-descriptor>

</ejb-jar>
